<!DOCTYPE html>
<html>
<head>
  <title>User List</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    h1 {
      color: #333;
      margin-top: 20px;
    }

    table {
      border: 1px solid #333;
      border-collapse: collapse;
      margin: 20px 0;
    }

    th, td {
      border: 1px solid #333;
      padding: 10px;
    }

    th {
      background-color: #007bff;
      color: white;
    }

    tr:nth-child(even) {
      background-color: #f2f2f2;
    }

    tr:hover {
      background-color: #ddd;
    }

    form {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin: 20px 0;
    }

    label {
      font-weight: bold;
      margin: 10px 0;
    }

    input {
      padding: 10px;
      margin: 5px 0;
    }

    input[type="submit"] {
      background-color: #007bff;
      color: white;
      padding: 10px 20px;
      border: none;
      cursor: pointer;
    }

    input[type="submit"]:hover {
      background-color: #0056b3;
    }

    a {
      text-decoration: none;
      color: #007bff;
    }

    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <h1>User List</h1>
  {{!-- display user array in table with columns as userId, username, isBlocked, location and give margin and spacing between rows--}}
  <table>
    <tr>
      <th>User ID</th>
      <th>Username</th>
      <th>Is Blocked</th>
      <th>Location</th>
    </tr>
    {{#each user_arr}}
      <tr>
        <td>{{this.userId}}</td>
        <td>{{this.username}}</td>
        <td>{{this.isBlocked}}</td>
        <td>{{this.location}}</td>
      </tr>
    {{/each}}
  </table>

  <form method="post" action="/admin/block-user">
    <label for="userId">Enter User ID to Block:</label>
    <input type="text" name="userId" id="userId" placeholder="Enter userId">
    <input type="submit" value="Block User">
  </form>

   <form method="post" action="/admin/unblock-user">
    <label for="unblock-user">Enter User ID to Unblock:</label>
    <input type="text" name="unblock-user" id="unblock-user" placeholder="Enter userId">
    <input type="submit" value="Unblock User">
  </form>

  <form method="post" action="/admin/delete-user">
    <label for="delete-user">Enter User ID to Delete:</label>
    <input type="text" name="delete-user" id="delete-user" placeholder="Enter userId">
    <input type="submit" value="Delete User">
  </form>

  <a href="/admin">Back to Admin Home</a>
</body>
</html>
